<% provide(:title, "Edit employee") %>
<%= link_to "従業員一覧へ", employees_path %>
<h1>従業員情報編集</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @employee) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "名前" %>
      <%= f.text_field :name, readonly: true, class: 'form-control' %>

      <%= f.label :email, "Eメール" %>
      <%= f.email_field :email, readonly: true, class: 'form-control' %>

      <%= f.label :hourly_wage, "時給" %>
      <%= f.number_field :hourly_wage, class: 'form-control' %>

      <%= f.submit "更新", class: "btn btn-primary" %>
    <% end %>
    <% if @employee.admin_flag != 1 %>
      <div>
        <span class="employee-delete badge text-bg-danger"><%= link_to "従業員を削除", @employee, data: { "turbo-method": :delete,
                                           turbo_confirm: "本当に削除しますか" } %></span>
      </div>
    <% end %>
  </div>
</div>
